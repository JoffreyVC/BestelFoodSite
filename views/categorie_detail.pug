            div(class="thumbnail")
                img(src='/images/'+gerecht.afbeelding alt="..." class="img-responsive")
                div(class="caption")
                    h4 #{gerecht.name}
                    p(class="description") #{gerecht.beschrijving}
                    div(class="clearfix")
